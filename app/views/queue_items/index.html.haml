%section.my_queue.container
  .row
    .span10.offset1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @queue_items.each do |q|
              - p = "#{q.position}"
              %tr
                %td 
                  %input(type="text" value=p)
                %td
                  = link_to "#{q.video_title}", video_path(q.video)
                %td
                  = button_to "Play", nil, class: "btn"
                %td
                  %select(name="")
                    %option(value="5") 5 Stars
                    %option(value="4") 4 Stars
                    %option(value="3") 3 Stars
                    %option(value="2") 2 Stars
                    %option(value="1") 1 Star
                %td
                  = link_to "#{q.category_name}", category_path(q.category)
                %td
                  = link_to "", method: :post do
                    %i.icon-remove
        = button_to "Update Instant Queue", nil, class: "btn"
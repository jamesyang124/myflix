%section.my_queue.container
  .row
    .span10.offset1
      %article
        %header
          %h2 My Queue
        = form_tag update_queue_path do
          %table.table
            %thead
              %tr
                %th(width="10%") List Order
                %th(width="30%") Video Title
                %th(width="10%") Play
                %th(width="20%") Rating
                %th(width="15%") Genre
                %th(width="15%") Remove
            %tbody
              - @queue_items.each do |q|
                - p = "#{q.position}"
                %tr
                  = hidden_field_tag "queue_items[][id]", q.id
                  %td 
                    = text_field_tag "queue_items[][position]", q.position
                  %td
                    = link_to "#{q.video_title}", video_path(q.video)
                  %td
                    = button_to "Play", nil, class: "btn"
                  %td
                    = select_tag "", options_for_select([5,4,3,2,1].map{ |number| [pluralize(number,"Star"), number.to_s]}, q.rating.to_i)
                  %td
                    = link_to "#{q.category_name}", category_path(q.category)
                  %td
                    = link_to q, method: :delete do
                      %i.icon-remove
          = submit_tag "Update Instant Queue", class: "btn"